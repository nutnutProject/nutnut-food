{% extends 'base.html.twig' %}

{% block body %}
    <header class="v-header-all containeur">
        <div class="fullscreen-image-wrap-all"></div>
        <div class="header-overlay-all"></div>
        <div class="header-content-all">
            <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet">
            <h1> Contactez-nous </h1>
        </div>
    </header>
    <div class="container" id="main-recette">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{path('home')}}">Accueil</a></li>
                <li class="breadcrumb-item active" aria-current="page">Contact</li>
            </ol>
        </nav>
        {{ form_start(form) }}

            <div class="form-group">
                <label for="sujet">Votre email</label>
                {{ form_widget(form.email, {'attr': {'class': 'form-control mb-4','value': userEmail }} ) }}
            </div>

            <div class="form-group">
                <label for="sujet">Votre sujet</label>
                {{ form_widget(form.sujet, {'attr': {'class': 'form-control mb-4'}} ) }}
            </div>

            <div class="form-group">
                <label for="message">Votre message</label>
                {{ form_widget(form.message, {'attr': {'class': 'form-control mb-4','id': 'textarea'}} ) }}
            </div>

            <button class="btn btn-success mx-auto">{{ button_label|default('envoie') }}</button>
        {{ form_end(form) }}
    </div>
{% endblock %}