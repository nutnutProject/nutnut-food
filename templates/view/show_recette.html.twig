{% extends 'base.html.twig' %}

{% block body %}

    <header class="v-header-all containeur">
        <div class="fullscreen-image-wrap-all"></div>
        <div class="header-overlay-all"></div>
        <div class="header-content-all">
            <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet">
            <h1> {{recette.title}} - {{recette.user.firstname}} </h1>
        </div>
    </header>

    <div class="container" id="main-recette">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('home') }}">Accueil</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('category_show', {slug: recette.category.slug}) }}">{{ recette.category.name }}</a></li>
                    <li class="breadcrumb-item active" aria-current="page">{{ recette.title }}</li>
            </ol>
        </nav>

        <div class="row">
            <div class="col-md-8">
                <div class="card" >
                    <img src="{{asset(recette.photo)}}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h1 class="card-title">{{recette.title}}  </h1>
                        <p class="card-text">{{recette.description}}</p>
                        {% for diet in recette.diet %}
                            <span class="badge badge-success">{{diet.name}}</span>  
                        {% endfor %}

                        <div class="modal fade" id="modalContactForm" tabindex="-1" role="dialog" aria-labelledby="myContactModalLabel"
                            aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <form method="POST">
                                    <div class="modal-content">
                                        <div class="modal-header text-center">
                                            <h4 class="modal-title w-100 font-weight-bold">Ecris au FOODER</h4>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body mx-3">
                                            <div class="md-form mb-5">
                                                <i class="fas fa-user prefix grey-text"></i>
                                                <input type="text" id="form34" class="form-control validate" name="name">
                                                <label data-error="wrong" data-success="right" for="form34">Your name</label>
                                            </div>
                            
                                            <div class="md-form mb-5">
                                                <i class="fas fa-envelope prefix grey-text"></i>
                                                <input type="email" id="form29" class="form-control validate" name="email">
                                                <label data-error="wrong" data-success="right" for="form29">Your email</label>
                                            </div>
                                    
                                            <div class="md-form mb-5">
                                                <i class="fas fa-tag prefix grey-text"></i>
                                                <input type="text" id="form32" class="form-control validate" name="subject">
                                                <label data-error="wrong" data-success="right" for="form32">Subject</label>
                                            </div>
                                    
                                            <div class="md-form">
                                                <i class="fas fa-pencil prefix grey-text"></i>
                                                <textarea type="text" id="form8" class="md-textarea form-control" rows="4" name="message"></textarea>
                                                <label data-error="wrong" data-success="right" for="form8">Your message</label>
                                            </div>
                                        </div>
                                    <div class="modal-footer d-flex justify-content-center">
                                        <button class="btn btn-unique">Envoyer <i class="fas fa-paper-plane-o ml-1"></i></button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <div class="modal fade" id="modalNoteForm" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <form method="POST" action="/noter_la_recette/{{recette.slug}}">
                                <div class="modal-content">
                                    <div class="modal-header text-center">
                                        <h4 class="modal-title w-100 font-weight-bold">Noter la recette</h4>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body mx-3">
                                        <div class="md-form">
                                            <label for="exampleFormControlSelect1">Votre note</label>
                                            <select class="form-control" id="exampleFormControlSelect1" name="note">
                                                <option>1</option>
                                                <option>2</option>
                                                <option>3</option>
                                                <option>4</option>
                                                <option>5</option>
                                            </select>
                                        </div>    

                                        <div class="md-form">
                                            <i class="fas fa-pencil prefix grey-text"></i>
                                            <textarea type="text" id="form9" class="md-textarea form-control" rows="4" name="commentaire"></textarea>
                                            <label data-error="wrong" data-success="right" for="form9">Votre commentaire</label>
                                        </div>
                                    </div>
                                    <div class="modal-footer d-flex justify-content-center">
                                        <button class="btn btn-unique">Envoyer <i class="fas fa-paper-plane-o ml-1"></i></button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        {% if ( recette_apprise == 0) %}
                            <div class="text-center">
                                <a class="btn btn-default btn-rounded mb-2 mt-5" data-toggle="modal" data-target="#modalContactForm">Apprendre !</a>
                            </div>
                        {% else %}
                            <div class="text-center">
                                <a class="btn btn-default btn-rounded mb-2 mt-5" data-toggle="modal" data-target="#modalNoteForm">Noter cette recette</a>
                            </div>
                        {% endif %}
                    {% endif %}

                </div>
            </div>
        </div>

        <div class="col">
            <div class="card" >
                <img src="{{asset('img/wonder_icon.png')}}" class="card-img-top-user" alt="...">
                <div class="rating">
                    <span class=""><img src="{{asset('img/noix-check.png')}}"></span>
                    <span class=""><img src="{{asset('img/noix-check.png')}}"></span>
                    <span class=""><img src="{{asset('img/noix-check.png')}}"></span>
                    <span class=""><img src="{{asset('img/noix-check.png')}}"></span>
                    <span class=""><img src="{{asset('img/noix-check.png')}}"></span> <br>
                    <span class="">{{recette.note}} /5 </span>
                </div>
                    <div class="card-body">
                        <h4 class="card-title">{{recette.user.firstname}} {{recette.user.lastname|slice(0, 1)}}</h4>
                        <h5 class="card-title">{{recette.user.age}}</h5>
                        <h5 class="card-title">{{recette.user.city}}</h5>
                        <p class="card-text">{{recette.user.description}}</p>
                        <p class="card-text">{{recette.creationDate|date("m/d/Y")}}
                    </div> 
                </div>
                <div class="card" id="list-ingredients">
                    <ul class="list-group">
                        <li class="list-group-item list-group-item-warning">Ingredients</li>
                        <li class="list-group-item">
                            {% for ingredient in recette.ingredients %}
                                <li class="list-group-item">{{ingredient.name}}, {{ingredient.quantity}}</li>
                            {% endfor %}
                        </li>
                    </ul>
                </div>
            </div>         
        </div>

        <h1 class="category">AVIS :  </h1>

        <div class="row">

            {% if notes %}  
                {% for note in notes %}
                <div class="col-3">
                    <div class="card">
                        <div class="card-body d-flex flex-column">
                            <div class="user-synop">
                                <img class="icon-user" src="img/wonder_icon.png" alt="Card image cap">
                                <p class="user-name">{{note.user.firstname}} {{note.user.lastname|slice(0, 1)}}</p>       
                            </div>
                            <div class="rating">
                                {% set nb_etoiles = 5 %}
                                {% set message = "" %}
                                {% for i in 0..nb_etoiles %}
                                    {% if note.note >i and note.note <i+1 %}
                                        {% set message = message ~ '/' %}
                                    {% elseif note.note >i %}
                                        <img src="{{asset('img/noix-check.png')}}">
                                    {% else %}
                                        <img src="{{asset('img/noix.png')}}">
                                    {% endif %}
                                {% endfor %}
                            </div>
                            <p class="card-text">{{note.commentaire}}</p>
                            <p>Ajout√© le {{note.creationDate|date("m/d/Y")}}</p> 
                        </div>           
                    </div>
                </div>
                {% endfor %}         
            {% endif %}
        </div>

    </div>
</div>
                       
























<main id="main">
    <div class="infos" id="infos">

      
    
          </div>
    




<div  class="container mt-3">
    <div class="row">
        <div class="col-sm">
            <div class="card" id="search-box">
                <h1 class="search-home">On cuisine quoi aujourd'hui ? </h1>
                <div id="search" class="card-body text-center">
                    <!-- Search form -->
                    <form class="form-inline mr-auto">
                        <input class="form-control form-control-lg mr-sm-2 center" type="text" placeholder="Rechercher une recette" aria-label="Rechercher">
                        <button class="btn blue-gradient btn-rounded  btn-lg my-0" type="submit">Rechercher</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</main>
{% endblock %}
