{% extends 'base.html.twig' %}

{% block title %}Recette index{% endblock %}

{% block body %}
    <h1>Recette index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Slug</th>
                <th>Photo</th>
                <th>Description</th>
                <th>Online</th>
                <th>Validate</th>
                <th>Creation_date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recette in recettes %}
            <tr>
                <td>{{ recette.id }}</td>
                <td>{{ recette.title }}</td>
                <td>{{ recette.slug }}</td>
                <td>{{ recette.photo }}</td>
                <td>{{ recette.description }}</td>
                <td>{{ recette.online ? 'Yes' : 'No' }}</td>
                <td>{{ recette.validate ? 'Yes' : 'No' }}</td>
                <td>{{ recette.creationDate ? recette.creationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('recette_show', {'id': recette.id}) }}">show</a>
                    <a href="{{ path('recette_edit', {'id': recette.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('recette_new') }}">Create new</a>
{% endblock %}
