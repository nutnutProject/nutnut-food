{% extends 'base.html.twig' %}

{% block title %}Recette{% endblock %}

{% block body %}
    <h1>Recette</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recette.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ recette.title }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ recette.slug }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ recette.photo }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ recette.description }}</td>
            </tr>
            <tr>
                <th>Online</th>
                <td>{{ recette.online ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Validate</th>
                <td>{{ recette.validate ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Creation_date</th>
                <td>{{ recette.creationDate ? recette.creationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('recette_index') }}">back to list</a>

    <a href="{{ path('recette_edit', {'id': recette.id}) }}">edit</a>

    {{ include('recette/_delete_form.html.twig') }}
{% endblock %}
