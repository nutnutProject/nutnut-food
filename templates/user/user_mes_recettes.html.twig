{% extends 'base.html.twig' %}

    {% block body %}

    <!-- Tableau de bord -->
        <div class="container mt-5 mb-3" id="board">
        <h2>Tableau de bord</h2>
            <div class="row">
                <div class="col-lg-3">
                    <div class="row mt-0">
                        <div class="col ">
                            <div class="list-group" id="list-tab">
                                <a class="list-group-item list-group-item-action" id="list-home-list" href="{{path('user', {id: user.id})}}">Tableau de bord</a>
                                <a class="list-group-item list-group-item-action" id="list-profile-list" href="{{path('user_edit', {id: user.id} )}}">Modifier mon profil</a>
                                <a class="list-group-item list-group-item-action active" id="list-creation-list" href="{{path('user_recettes', {id: user.id})}}">Mes recettes</a>
                                <a class="list-group-item list-group-item-action" id="list-interest-list" href="interest_user.html">IntÃªrets</a>                    
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3 col-lg-4 col-xl-3 mb-3 mt-3" id="ajout">
                            <a type="button" class="btn btn-outline-success btn-lg" href="{{path('recette_new', {id: user.id} )}}">Ajouter une Recette</a> 
                        </div>
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="row mt-0">
                    {% for recette in user.recettes %}
                        <div class="col-12 col-sm-6 col-lg-4">
                            <div class="card mx-auto">
                                <img class="card-img-top" src="{{ asset(recette.photo) }}" alt="Card image cap">
                                <div class="card-body">
                                    <h4 class="card-title">{{recette.title}}</h4>
                                    <div class="rating">
                                        <span class=""><img src="{{asset('img/noix-check.png')}}">{{recette.note}}</span>
                                    </div>
                                    <p class="card-text">{{recette.description}}</p>
                                </div>
                                <div class="col">
                                    <div class="card-footer bg-transparent border-warning mt-auto align-self-end">
                                        <a href="{{path('recette_edit', {id: user.id, slug: recette.slug} ) }}" class="btn btn-amber btn-block ">Modifier</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                    </div>
                    <nav aria-label="Page navigation example" class="mx-auto">
                        <ul class="pagination">
                            <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">Next</a></li>
                        </ul>
                    </nav>
                </div>
             </div>  
        </div>  

    {% endblock %}   